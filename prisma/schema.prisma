generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  HOME_LIVING
  JEWELRY_ACCESSORIES
  CLOTHING
  BAGS_PURSES
  ART_COLLECTIBLES
  BATH_BEAUTY
}

enum Role{
  ADMIN
  BUYER
  SELLER
}

// Users 
model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String    @unique
  passwordHash String
  phone       String?
  roles       Role[]    // ADMIN, BUYER, SELLER
  bio         String?
  avatar      String?   // URL da foto de perfil
  addresses   String?
  ratings     Rating[]
  products    Product[]
}

// Products
model Product {
  id          Int        @id @default(autoincrement())
  name        String
  pictureURL  String     // URL gerada pelo Supabase Storage
  description String
  price       Float
  quantity    Int
  seller      User       @relation(fields: [sellerId], references: [id])
  sellerId    Int
  category    Category   
  ratings     Rating[]
}

// Rating
model Rating {
  id        Int      @id @default(autoincrement())
  value     Int      // 1-5
  comment   String?  // opcional
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  createdAt DateTime @default(now())
}
