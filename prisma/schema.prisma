generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String    @unique
  passwordHash String
  phone        String?
  roles        Role[]
  bio          String?
  avatar       String?
  addresses    String?
  products     Product[]
  ratings      Rating[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  pictureURL  String
  description String
  price       Float
  quantity    Int
  sellerId    Int
  category    Category
  seller      User     @relation(fields: [sellerId], references: [id])
  ratings     Rating[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  value     Int
  comment   String?
  userId    Int
  productId Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

enum Category {
  HOME_LIVING
  JEWELRY_ACCESSORIES
  CLOTHING
  BAGS_PURSES
  ART_COLLECTIBLES
  BATH_BEAUTY
}

enum Role {
  ADMIN
  BUYER
  SELLER
}
